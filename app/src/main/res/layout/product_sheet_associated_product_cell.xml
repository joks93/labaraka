<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    
    <ImageView
        android:id="@+id/product_sheet_associated_product_image"
        android:layout_width="160dp"
        android:layout_height="220dp"/>

    <TextView
        android:id="@+id/product_sheet_associated_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_sheet_associated_product_image"
        android:layout_alignLeft="@id/product_sheet_associated_product_image"
        android:padding="5dp"
        android:typeface="sans"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:textColor="@color/colorBlack"
        android:textSize="16dp"
        android:paddingBottom="5dp"
        android:text="14â‚¬99"/>


    <ImageView
        android:id="@+id/product_sheet_associated_product_action_favorite"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/product_sheet_associated_product_image"
        android:layout_alignRight="@id/product_sheet_associated_product_image"
        android:layout_margin="5dp"
        android:clickable="true"
        android:background="@drawable/zzz_heart_outline"/>

    <TextView
        android:id="@+id/product_sheet_associated_product_name"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_sheet_associated_product_price"
        android:layout_alignLeft="@id/product_sheet_associated_product_image"
        android:paddingLeft="5dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="Other product"/>

</RelativeLayout>